{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AtuneNextStepChoiceOutput",
  "oneOf": [
    {
      "title": "SearchAction",
      "type": "object",
      "required": ["mode", "search_query"],
      "properties": {
        "mode": { "const": "enrich_with_search" },
        "search_query": { "type": "string" }
      },
      "additionalProperties": false
    },
    {
      "title": "EscalateAction",
      "type": "object",
      "required": ["mode", "reason"],
      "properties": {
        "mode": { "const": "escalate_to_unity" },
        "reason": { "type": "string" }
      },
      "additionalProperties": false
    },
    {
      "title": "DiscardAction",
      "type": "object",
      "required": ["mode", "reason"],
      "properties": {
        "mode": { "const": "discard" },
        "reason": { "type": "string" }
      },
      "additionalProperties": false
    }
  ]
}