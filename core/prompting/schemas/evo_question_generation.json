{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EvoQuestionGenerationOutput",
  "type": "object",
  "additionalProperties": {
    "type": "array",
    "items": {
      "type": "object",
      "required": ["question", "style", "response_type", "topic"],
      "properties": {
        "question": { "type": "string" },
        "style": { "type": "string", "enum": ["analytical", "reflective", "creative"] },
        "response_type": { "type": "string", "enum": ["text", "choice", "slider"] },
        "topic": { "type": "string" }
      },
      "additionalProperties": false
    }
  }
}
